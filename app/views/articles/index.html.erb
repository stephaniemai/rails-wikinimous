<h2>Articles</h2>
<p><%= link_to "Add a new article", new_article_path  %></p>
<ul>
<% @articles.each do |article| %>
  <li>
    <h4><%= link_to article.title, article_path(article) %></h4>
    <span>(<%= link_to "edit", edit_article_path(article) %> | <%= link_to "delete", article_path(article), method: :delete  %>)</span>
    <p><%= article.content %></p>
  </li>
<% end %>
</ul>
